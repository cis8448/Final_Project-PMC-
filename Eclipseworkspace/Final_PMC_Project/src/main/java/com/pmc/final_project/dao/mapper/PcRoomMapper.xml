<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pmc.final_project.dao.IPcRoom">
	<insert id="JSPSignUp" parameterType="PcRoomBean"><!-- 회원가입 처리 -->
		INSERT INTO SBPCROOM
		(p_id,p_pass,p_name,p_phone,p_email,p_addr,p_holiday) VALUES
		(#{p_id},#{p_pass},#{p_name},#{p_phone},#{p_email},#{p_addr},2)
	</insert>


	<!-- 암호화된 로그인 처리 -->
	<select id="getSecurityPwd" parameterType="String"
		resultType="String">
		SELECT M_PWD FROM PCROOM WHERE p_id=#{id}
	</select>

	<select id="getMemberInfo" parameterType="String"
		resultType="PcRoomBean">
		SELECT * FROM PCROOM WHERE p_id=#{id}
	</select>

	<select id="PCIdCheck" parameterType="String" resultType="Integer">
	
		SELECT COUNT(*) FROM SBPCROOM WHERE p_id=#{userid}
	</select>


</mapper>