<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pmc.final_project.dao.IPcRoomDao">
	<insert id="pcroomInsert" parameterType="pcroom"><!-- 회원가입 처리 -->

		INSERT INTO SBPCROOM (p_id,p_pass,p_name,p_phone,p_email,p_addr,p_holiday) VALUES
		(#{p_id},#{p_pass},#{p_name},#{p_phone},#{p_email},#{p_addr},2)
	</insert>


	<!-- 암호화된 로그인 처리 -->
	<select id="getSecurityPwd" parameterType="String"
		resultType="String">
		SELECT M_PWD FROM PCROOM WHERE p_id=#{id}
	</select>

	<select id="getMemberInfo" parameterType="String"
		resultType="pcroom"><!-- 인터페이스에 작성한 해당 메소드에 타입 -->
		SELECT * FROM PCROOM WHERE p_id=#{id}<!-- 인터페이스에 작성한 파라미터 변수명 -->
	</select>

</mapper>