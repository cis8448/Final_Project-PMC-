<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pmc.final_project.dao.IPcRoom">
	<insert id="JSPSignUp" parameterType="PcRoomBean"><!-- 회원가입 처리 -->
		INSERT INTO PCROOM
		(p_id,p_pass,p_name,p_phone,p_email,p_addr,p_holiday,p_dong,p_sido,p_gugun) VALUES
		(#{p_id},#{p_pass},#{p_name},#{p_phone},#{p_email},#{p_addr},2,#{p_dong},#{p_sido},#{p_gugun})
	</insert>


	<!-- 암호화된 로그인 처리 -->
	<select id="getSecurityPwd" parameterType="String"
		resultType="String">
		SELECT p_pass FROM PCROOM WHERE p_id=#{id}
	</select>

	<select id="getMemberInfo" parameterType="String" resultType="PcRoomBean">
		SELECT * FROM PCROOM WHERE P_ID=#{id}
	</select>

	<select id="PCIdCheck" parameterType="String" resultType="Integer">
		SELECT COUNT(*) FROM PCROOM WHERE p_id=#{userid}
	</select>
	<select id="idsearch" parameterType="PcRoomBean" resultType="String">
		SELECT P_ID FROM PCROOM WHERE (P_NAME=#{p_name} AND P_PHONE=#{p_phone})
	</select>
	
	<update id="pwsearch" parameterType="hashmap">
		UPDATE PCROOM SET P_PASS=#{KeyCode} WHERE P_ID=#{cid}
	</update>
	
	<select id="emailsearch" parameterType="PcRoomBean" resultType="String">
		SELECT P_EMAIL FROM PCROOM WHERE (P_ID=#{p_id} AND P_PHONE=#{p_phone})
	</select>
	<select id="idselinfo" parameterType="PcRoomBean" resultType="Integer">
		SELECT COUNT(*) FROM PCROOM WHERE p_name=#{p_name} AND p_phone=#{p_phone}
	</select>
	<select id="pwselinfo" parameterType="PcRoomBean" resultType="Integer">
		SELECT COUNT(*) FROM PCROOM WHERE p_id=#{p_id} AND p_phone=#{p_phone}
	</select>
	<select id="accept" parameterType="String" resultType="Integer">
		SELECT COUNT(*) FROM SBPCROOM WHERE p_id=#{p_id}
	</select>
	
	<insert id="fileupdate" parameterType="HashMap">
		INSERT INTO PCFILE VALUES (#{sysid},#{oriFileName},#{sysFileName})
	</insert>
	<update id="changeName" parameterType="PcRoomBean">
		UPDATE PCROOM SET P_NAME=#{p_name} WHERE P_ID=#{p_id}
	</update>
	<update id="changePhone" parameterType="PcRoomBean">
		UPDATE PCROOM SET P_PHONE=#{p_phone} WHERE P_ID=#{p_id}
	</update>
	<update id="changepw2" parameterType="HashMap">
		UPDATE PCROOM SET P_PASS=#{pw} WHERE P_ID=#{id}
	</update>
	<select id="selectAll" parameterType="String" resultType="PcRoomBean">
		SELECT * FROM SBPCROOM
	</select>
	
	


</mapper>