<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PcRoomInfo"
    android:orientation="vertical">


    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn1"
                    android:background="@drawable/menubutton"
                    android:layout_marginLeft="5dp"/>
                <ImageButton
                    android:layout_marginLeft="70dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/star"
                    android:onClick="starpush"
                    android:id="@+id/startbtn"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bell"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="20dp"/>
                <ImageButton
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/profile"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내가 가입한 PC방 이름"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:id="@+id/MyPcName"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="가입하기"
                    android:background="@drawable/round"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFF"
                    android:id="@+id/joinbtn"
                    android:onClick="pcjoinbtn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="주소"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:textColor="#FFFF"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ex)인천광역시 oo구 ~~~"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/addr"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/left"
                    android:onClick="mypcpicture"
                    android:id="@+id/leftbtn"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="50dp"
                        android:id="@+id/pcroomimg1"/>
                </FrameLayout>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/right"
                    android:onClick="mypcpicture"
                    android:id="@+id/rightbtn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="좌석확인"
                    android:background="@drawable/round"
                    android:textColor="#FFFF"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:onClick="SeatOpen"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/roundtext"
                    android:gravity="center"
                    android:text="40/70"
                    android:textSize="15sp"
                    android:id="@+id/seats"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:text="032-000-0000"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="@drawable/roundtext"
                    android:id="@+id/hptxt"/>
            </LinearLayout>


            <TextView
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="남은 시간 : "
                android:background="@drawable/round"
                android:textColor="#FFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:id="@+id/timetxt"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="판매 상품 보러 가기"
                android:background="@drawable/round"
                android:textColor="#FFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:onClick="ProductOrder"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_gravity="start"
            android:background="#FFFFFF">

            <!-- 비로그인 메뉴 (출력, 미출력) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/nlog"
                android:orientation="vertical">

                <!-- 비로그인 메뉴 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:id="@+id/nLoginMenu">


                    <!--로그인 버튼(로그인 후 로그아웃으로 변경) -->


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="LogOut"
                        android:textSize="20sp"
                        android:onClick="LogOut"
                        android:background="@drawable/roundlogin"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/logoutbtn"
                        android:visibility="visible"/>


                </FrameLayout>
            </LinearLayout>

            <!-- 로그인 메뉴(출력, 미출력) -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/scroll"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/inlog">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/profile"/>
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">




                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/nametxt"/>
                        <!-- TextView에 글자 빈공간으로 바꾸기-->
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:id="@+id/minipoint"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/settings"
                        android:onClick="btnSetting"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </LinearLayout>
                <!-- 선 긋기-->
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#000000"/>
                <!-- 로그인 후 메뉴 출력 -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TableRow
                            android:id="@+id/TrHome"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:src="@drawable/home"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="홈으로가기"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:onClick="btnHome"/>
                        </TableRow>
                        <!-- 공지사항 -->
                        <TableRow
                            android:id="@+id/TrNotice"
                            android:paddingBottom="10dp"
                            android:visibility="visible">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/mega"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="공지사항"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp" />

                        </TableRow>

                        <!-- 공지사항 서브메뉴 -->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:id="@+id/NoticeSub">
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 전체 공지사항"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="Notice"/>
                            </TableRow>


                        </TableLayout>




                        <!-- 내정보 -->
                        <TableRow
                            android:id="@+id/TrMyInfo"
                            android:paddingBottom="10dp"
                            android:visibility="visible">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/profile"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="내정보"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:onClick="btnMyInfo"/>

                        </TableRow>

                        <!-- 내정보 서브메뉴 -->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:id="@+id/MyInfoSub">
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 내정보보기"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="btnMyInfo"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 퀵메뉴설정"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="btnQuick"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 가입한 PC방"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="btnMyPc"/>
                            </TableRow>

                        </TableLayout>

                        <!-- PC방 -->
                        <TableRow
                            android:id="@+id/PcInfo"
                            android:paddingBottom="10dp">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/pc"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="PC방"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"/>


                        </TableRow>
                        <!-- PC방 서브메뉴-->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:id="@+id/PCInfoSub">
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 좌석현황"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="SeatState"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 상품주문"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="ProductOrder"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- PC방 찾기"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="PcSearch"/>
                            </TableRow>

                        </TableLayout>

                        <!-- 기타 -->
                        <TableRow
                            android:id="@+id/Etc"
                            android:paddingBottom="10dp">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/etc"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="기타"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"/>



                        </TableRow>
                        <!-- 기타 서브메뉴 -->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:id="@+id/EctSub">
                            <TableRow>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="- 1:1문의"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="8sp"
                                    android:onClick="Inquiry"/>
                            </TableRow>

                        </TableLayout>




                    </TableLayout>

                </ScrollView>

            </LinearLayout>




        </LinearLayout>



    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>